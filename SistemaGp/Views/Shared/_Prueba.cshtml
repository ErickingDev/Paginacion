@model SistemaGp.Models.Producto

<!-- product right -->
<div class="left-ads-display col-md-9 filter @Model.Categoria.NombreCategoria.Replace(' ', '_')">
    <div class="wrapper_top_shop">
        <div class="clearfix"></div>
        <!-- product-sec1 -->
        <div class="product-sec1">
            <!--/mens-->
            <div class="col-md-4 product-men">
                <div class="product-shoe-info shoe">
                    <div class="men-pro-item">
                        <div class="men-thumb-item">
                            <img src="@WC.ImagenRuta@Model.ImagenUrl" alt="Imagen Card">
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a href="single.html" class="link-product-add-cart">Quick View</a>
                                </div>
                            </div>
                            <span class="product-new-top">New</span>
                        </div>
                        <div class="item-info-product">
                            <h4>
                                <a href="single.html">@Model.NombreProducto</a>
                            </h4>
                            <div class="info-product-price">
                                <div class="grid_meta">
                                    <div class="product_price">
                                        <div class="grid-price ">
                                            <span class="text-info h5">@Model.Precio</span>
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="shoe single-item hvr-outline-out">
                                    <form action="#" method="post">
                                        
                          
                                        
                                        <a href="#" data-toggle="modal" data-target="#myModal1"></a>
                                    </form>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //product-sec1 -->
        <div class="clearfix"></div>
    </div>
    <!--aqui-->
</div>