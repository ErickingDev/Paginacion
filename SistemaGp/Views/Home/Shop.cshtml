@model SistemaGp.Models.ViewModels.HomeVM


<!-- top Products -->
<div class="ads-grid_shop">
	<div class="shop_inner_inf">
		<!-- tittle heading -->
		<!-- //tittle heading -->
		<!-- product left -->
		<div class="side-bar col-md-3">

			<!--preference -->
			<div class="left-side">
				<h3 class="agileits-sear-head">Occasion</h3>
				<ul>
					<li>
						<button class="btn btn-dark filter-button" data-filter="all">Todos</button>

						@foreach (var cat in Model.Categorias)
						{
							<button class="btn btn-outline-secondary filter-button" data-filter="@cat.NombreCategoria.Replace(' ','_')">
								@cat.NombreCategoria
							</button>
						}
					</li>
				</ul>
			</div>
			<!-- // preference -->

		</div>
		<!-- //product left -->
		<!-- product right -->
		

			
				<div class="row">
					@foreach (var prod in Model.Productos)
					{
						
							<partial name="_Prueba" model="prod" />
						
					}
				</div>
			
		
			
		
		<div class="clearfix"></div>
	</div>
</div>

@section Scripts{

	<script>
		$(document).ready(function () {

			$(".filter-button").click(function () {

				var value = $(this).attr('data-filter');
				if (value == "all") {
					$('.filter').show('1000');
				}
				else {
					$(".filter").not('.' + value).hide('3000');
					$('.filter').filter('.' + value).show('3000');

				}
			});

		});
	</script>

}